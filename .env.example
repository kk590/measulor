# Measulor runtime configuration
# Copy this file to .env and set real values before startup.

# Required app security secrets
LICENSE_SECRET=replace_with_random_64_char_hex
ENCRYPTION_KEY=replace_with_fernet_key

# Keygen.sh License Integration (required)
KEYGEN_ACCOUNT_ID=replace_with_keygen_account_id
KEYGEN_PRODUCT_ID=replace_with_keygen_product_id
KEYGEN_PRODUCT_TOKEN=replace_with_keygen_product_token

# Optional Keygen/API settings
KEYGEN_API_URL=https://api.keygen.sh/v1
KEYGEN_TIMEOUT_SECONDS=10

# App runtime flags
FLASK_ENV=production
FLASK_DEBUG=False
ENFORCE_HTTPS=true
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=false
